    "version": "0.2.0",
    "configurations": [
        {
            "name": "Assembler - Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/assembler.exe", // Adjust the path to your executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "preLaunchTask": "CMake: Build Release"
        },
        {
            "name": "Assembler - g++.exe - debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/assembler.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],

            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: Build Debug"
        }
    ]
}